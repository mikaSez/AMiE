    <![endif]-->
</head>
<!-- ?_switch_user=username puis ?_switch_user=_exit -> Pour changer le role de l'admin -->
<body class="toggled sw-toggled">
    <header id="header" class="">
        <ul class="header-inner">
            <li class="logo hidden-xs">
                <a href="{{ path('amie_home_home') }}">AMiE : Le réseau des Anciens Miagistes d'Evry</a>
            </li>

            {% set route = app.request.attributes.get('_route') %}
            {% set tabRoute = route|split('_') %}
            {% set pathToProfilePic = 'bundles/amiehome/images/profile-pics/' %}
            {% if layout is not defined %}
                {# Permet de ne pas générer d'erreur pour l'utilisation du bundle fos user #}
                {% set layout = {'notifications': null, 'conversations': null, 'correspondant': null, 'conversationsNonLues': 0, 'firstMessages': null} %}
            {% endif %}
            
            <li class="pull-right">
            <ul class="top-menu">
                {% if app.user %} <!-- Si l'utilisateur est connecté -->
                <li class="dropdown">
                    <a data-toggle="dropdown" class="tm-message" href="">{% if layout.conversationsNonLues > 0 %}<i class="tmn-counts">{{ layout.conversationsNonLues }}</i>{% endif %}</a>
                    <div class="dropdown-menu dropdown-menu-lg pull-right">
                        <div class="listview">
                            <div class="lv-header">
                                Messages
                                <ul class="actions">
                                    <li class="dropdown">
                                        <a href="{{ path('amie_home_creationconversation') }}" title="Envoyer un nouveau message">
                                            <i class="glyphicon glyphicon-pencil"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="lv-body c-overflow" tabindex="1" style="overflow: hidden; outline: none;">
                                <!-- Messages adressés à l'utilisateur -->
                                {% for conversation in layout.conversations %}
                                <a class="lv-item" href="{{ path('amie_home_messagerie', { 'idConversation': conversation.id}) }}" title="Lire le message">
                                    <div class="media">
                                        <div class="pull-left">
                                            <img class="lv-img-sm" src="{{ asset(pathToProfilePic ~ 'default.jpg') }}" alt="">
                                        </div>
                                        <div class="media-body">
                                            <div class="lv-title">{{ layout.correspondants[conversation.id].prenom }} {{ layout.correspondants[conversation.id].nom }} ({{ layout.correspondants[conversation.id].username }})</div>
                                            <small class="lv-small">{{ layout.firstMessages[conversation.id].contenu|length > 30 ? layout.firstMessages[conversation.id].contenu|slice(0, 30) ~ '...' : layout.firstMessages[conversation.id].contenu }}</small>
                                        </div>
                                    </div>
                                </a>
                                {% endfor %}
                            </div>
                            <a class="lv-footer" title="Acceder à la messagerie" href="{{ path('amie_home_messagerie_sans_conversation') }}">Voir tous les messages</a>
                        </div>
                    <div id="ascrail2002" class="nicescroll-rails nicescroll-rails-vr" style="width: 0px; z-index: 9; cursor: default; position: absolute; top: 0px; left: 298px; height: 275px; display: none;"><div class="nicescroll-cursors" style="position: relative; top: 0px; float: right; width: 0px; height: 0px; border: 0px; border-radius: 0px; background-color: rgba(0, 0, 0, 0.498039); background-clip: padding-box;"></div></div><div id="ascrail2002-hr" class="nicescroll-rails nicescroll-rails-hr" style="height: 0px; z-index: 9; top: 275px; left: 0px; position: absolute; cursor: default; display: none;"><div class="nicescroll-cursors" style="position: absolute; top: 0px; height: 0px; width: 0px; border: 0px; border-radius: 0px; background-color: rgba(0, 0, 0, 0.498039); background-clip: padding-box;"></div></div></div>
                </li>
                {% endif %}
                {% if app.user %} <!-- Si l'utilisateur est connecté -->
                <li class="dropdown">
                    <a data-toggle="dropdown" class="tm-notification" href="">{% if layout.notifications|length > 0 %}<i class="tmn-counts">{{ layout.notifications|length}}</i>{% endif %}</a>
                    <div class="dropdown-menu dropdown-menu-lg pull-right">
                        <div class="listview{% if layout.notifications|length == 0 %} empty{% endif %}" id="notifications">
                            <div class="lv-header">
                                Notifications
                                {% if layout.notifications|length > 0 %}
                                <ul class="actions">
                                    <li class="dropdown">
                                        <a href="" data-clear="notification" title="Marquer tout comme lu">
                                            <i class="glyphicon glyphicon-ok"></i>
                                        </a>
                                    </li>
                                </ul>
                                {% endif %}
                            </div>
                            <div id="list_notifications" class="lv-body c-overflow" tabindex="2" style="overflow: hidden; outline: none;">
                                <!-- Notifications de miagiste s'étant inscrit ou d'entreprise + réponse aux offres et ajouts d'offres -->
                                {% for notification in layout.notifications %}
                                <div id="notification_{{ notification.id }}">
                                    <a href="
                                        {% if notification.idOffre is not null %}
                                            {{ path('amie_offresemplois_offre', {'id': notification.idOffre, 'slug': notification.action|slugify}) }}
                                        {% elseif notification.idActualite is not null %}
                                            {{ path('amie_actualites_actualite', {'id': notification.idActualite, 'slug': notification.action|slugify}) }}
                                        {% elseif notification.idFormulaire is not null %}
                                            {{ path('amie_miagistes_fiche', {'id': notification.idFormulaire}) }}
                                        {% endif %}" class="lv-item" title="Marquer comme lu">
                                        <div class="media">
                                            <!--
                                            <div class="pull-left">
                                                <img class="lv-img-sm" src="{{ asset('bundles/amiehome/images/profile-pics/1.jpg') }}" alt="">
                                            </div>
                                            -->
                                            <div class="media-body">
                                                <div class="lv-title">{{ notification.action }}</div>
                                                <small class="lv-small">{{ notification.descriptif }}</small>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                {% endfor %}
                            </div>
                            <a class="lv-footer" title="Acceder à l'historique des notifications" href="{{ path('amie_home_notifications') }}">Voir toutes les notifications</a>
                        </div>

                    <div id="ascrail2003" class="nicescroll-rails nicescroll-rails-vr" style="width: 0px; z-index: 9; cursor: default; position: absolute; top: 0px; left: 298px; height: 275px; display: none;"><div class="nicescroll-cursors" style="position: relative; top: 0px; float: right; width: 0px; height: 0px; border: 0px; border-radius: 0px; background-color: rgba(0, 0, 0, 0.498039); background-clip: padding-box;"></div></div><div id="ascrail2003-hr" class="nicescroll-rails nicescroll-rails-hr" style="height: 0px; z-index: 9; top: 275px; left: 0px; position: absolute; cursor: default; display: none;"><div class="nicescroll-cursors" style="position: absolute; top: 0px; height: 0px; width: 0px; border: 0px; border-radius: 0px; background-color: rgba(0, 0, 0, 0.498039); background-clip: padding-box;"></div></div></div>
                </li>
                {% endif %}
                <li class="dropdown hidden-xs">
                    <a data-toggle="dropdown" class="tm-profile" href=""></a>
                    <ul class="dropdown-menu dm-icon pull-right">
                        {% if app.user %} <!-- Si l'utilisateur est connecté -->
                            <div class="lv-header" style="text-align:center;padding-bottom:3px;border-bottom:1px solid #f0f0f0">
                                {{ app.user }}
                            </div>
                            <li>
                                <a title="Voir le profil" href="{{ path('fos_user_profile_show') }}"><i class="glyphicon glyphicon-user"></i>&nbsp;&nbsp;Profil</a>
                            </li>
                            <li>
                                <a title="Changer le mot de passe" href="{{ path('fos_user_change_password') }}"><i class="glyphicon glyphicon-wrench"></i>&nbsp;&nbsp;Changer le mot de passe</a>
                            </li>
                            <li>
                                <a title="Modifier les informations du compte" href="{{ path('amie_user_modifieruser', { 'id': app.user.id}) }}"><i class="glyphicon glyphicon-cog"></i>&nbsp;&nbsp;Paramètres du compte</a>
                            </li>
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <li>
                                    <a title="Gérer les utilisateurs" href="{{ path('amie_user_gestion') }}"><i class="glyphicon glyphicon-th-list"></i>&nbsp;&nbsp;Gérer les utilisateurs</a>
                                </li>
                            {% endif %}
                            <li>
                                <a title="Se déconnecter" href="{{ path('fos_user_security_logout') }}"><i class="glyphicon glyphicon-off"></i>&nbsp;&nbsp;Déconnexion</a>
                            </li>
                        {% else %} <!-- Si l'utilisateur n'est pas connecté -->
                            <li>
                                <a title="Se connecter" href="{{ path('fos_user_security_login') }}"><i class="glyphicon glyphicon-log-in"></i>&nbsp;&nbsp;Connexion</a>
                            </li>
                            <li>
                                <a title="Se créer un compte" href="{{ path('fos_user_registration_register') }}"><i class="glyphicon glyphicon-edit"></i>&nbsp;&nbsp;Créer un compte</a>
                            </li>
                        {% endif %}
                    </ul>
                </li>
                <li class="dropdown">
                    <a data-toggle="dropdown" class="tm-settings" href=""></a>
                    <ul class="dropdown-menu dm-icon pull-right">
                        <li>
                            <a data-action="fullscreen" href=""><i class="glyphicon glyphicon-fullscreen"></i>&nbsp;&nbsp;Mode plein écran</a>
                        </li>
                        <li>
                            <a data-action="clear-localstorage" href=""><i class="glyphicon glyphicon-trash"></i>&nbsp;&nbsp;Vider le cache</a>
                        </li>
                    </ul>
                </li>
                </ul>
            </li>
        </ul>

        <!-- Bar de recherche -->
        <div id="top-search-wrap">
            <input type="text">
            <i id="top-search-close">×</i>
        </div>
    </header>

    <section id="main">
        <aside id="sidebar" class="">
            <div class="sidebar-inner c-overflow" style="overflow:hidden; outline:none;">
                <div class="si-inner">
                    <div class="profile-menu">
                        <a href=""> <!--
                            <div class="profile-pic">
                                <img src="../web/bundles/amihome/images/profile-pics/1.jpg" alt="">
                            </div>
                            
                            <div class="profile-info">
                                Malinda Hollaway
                                
                                <i class="md md-arrow-drop-down"></i>
                            </div> -->
                        </a>
                        <!--
                        <ul class="main-menu" style="display: none;">
                            <li>
                                <a href=""><i class="md md-person"></i> View Profile</a>
                            </li>
                            <li>
                                <a href=""><i class="md md-settings-input-antenna"></i> Privacy Settings</a>
                            </li>
                            <li>
                                <a href=""><i class="md md-settings"></i> Settings</a>
                            </li>
                            <li>
                                <a href=""><i class="md md-settings-power"></i> Logout</a>
                            </li>
                        </ul> -->
                    </div>
                    <ul class="main-menu">
                        <li {% if route=='amie_home_home' %}class="active"{% endif %}><a href="{{ path('amie_home_home') }}"><i class="glyphicon glyphicon-home"></i>&nbsp;&nbsp;Home</a></li>
                        <li class="sub-menu{% if tabRoute[1]=='miagistes' %} active toggled{% endif %}">
                            <a href="" title="Gestion/consultation des miagistes"><i class="glyphicon glyphicon-education"></i>&nbsp;&nbsp;Miagistes</a>
                            <ul>
                                <li><a {% if route=='amie_miagistes_formulaire' %}class="active"{% endif %} href="{{ path('amie_miagistes_formulaire') }}" title="Formulaire">Formulaire</a></li>
                                {% if is_granted('ROLE_SUPER_ADMIN') %}
                                    <li><a {% if route=='amie_miagistes_recherche' %}class="active"{% endif %} href="{{ path('amie_miagistes_recherche') }}" title="Rechercher un miagiste">Recherche</a></li>
                                    <li><a {% if route=='amie_miagistes_graphiques' %}class="active"{% endif %} href="{{ path('amie_miagistes_graphiques') }}" title="Statistiques sur les miagistes">Graphiques</a></li>
                                {% endif %}
                            </ul>
                        </li>
                        <li class="sub-menu{% if tabRoute[1]=='entreprises' %} active toggled{% endif %}">
                            <a href="" title="Gestion/consultation des entreprises"><i class="glyphicon glyphicon-briefcase"></i>&nbsp;&nbsp;Entreprises</a>
                            <ul>
                                <li><a {% if route=='amie_entreprises_recherche' %}class="active"{% endif %} href="{{ path('amie_entreprises_recherche') }}" title="Rechercher une entreprise">Recherche</a></li>
                                {% if is_granted('ROLE_SUPER_ADMIN') %}
                                    <li><a {% if route=='amie_entreprises_graphiques' %}class="active"{% endif %} href="{{ path('amie_entreprises_graphiques') }}" title="Statistiques sur les entreprises">Graphiques</a></li>
                                {% endif %}
                            </ul>
                        </li>

                        <li class="sub-menu{% if tabRoute[1]=='offresemplois' %} active toggled{% endif %}">
                            <a href="" title="Gestion/consultation des offres d'emplois"><i class="glyphicon glyphicon-tags"></i>&nbsp;&nbsp;Offres Emplois</a>
                            <ul>
                                <li><a {% if route=='amie_offresemplois_offres' %}class="active"{% endif %} href="{{ path('amie_offresemplois_offres') }}" title="Dernières offres d'emplois">Toutes les offres</a></li>
                                {% if is_granted('ROLE_ADMIN_ENT') or is_granted('ROLE_SUPER_ADMIN') %}
                                    <li><a {% if route=='amie_offresemplois_ajouter' %}class="active"{% endif %} href="{{ path('amie_offresemplois_ajouter') }}" title="Ajouter une offre d'emploi">Ajouter une offre d'emploi</a></li>
                                {% endif %}
                            </ul>
                        </li>
                        <li class="sub-menu{% if tabRoute[1]=='actualites' %} active toggled{% endif %}">
                            <a href="" title="Gestion/consultation des actualités"><i class="glyphicon glyphicon-pencil"></i>&nbsp;&nbsp;Actualités</a>
                            <ul>
                                <li><a {% if route=='amie_actualites_news' %}class="active"{% endif %} href="{{ path('amie_actualites_news') }}" title="Consulter toutes les actualités">Toutes les actualités</a></li>
                                {% if is_granted('ROLE_SUPER_ADMIN') %}
                                    <li><a {% if route=='amie_actualites_ajouter' %}class="active"{% endif %} href="{{ path('amie_actualites_ajouter') }}" title="Ajouter une actualité">Ajouter une actualité</a></li>
                                {% endif %}
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </aside>

        <section id="content">
            <div class="container">
                <div class="block-header">
                    <h2>{% block head %}{% endblock %}</h2>
                    {% block adminActions %}{% endblock %}
                </div>
                {% block content %}{% endblock %}
            </div>
        </section>
    </section>

