    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/amiehome/css/bootstrap.min.css') }}">
    <!-- Vendor -->
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/amiehome/css/vendor/fullcalendar.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/amiehome/css/vendor/animate.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/amiehome/css/vendor/summernote.css') }}">
